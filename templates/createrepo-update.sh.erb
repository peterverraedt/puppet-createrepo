#!/bin/bash
<%-
    command = @createrepo_update

    if @use_lockfile
        command = "flock -e -n #{@lockfile} #{command}"
    end
-%>

if [ "$(whoami)" != '<%= @repo_owner %>' ]; then
    echo "You really should be '<%= @repo_owner %>' while running '$0'"
    exit 1
fi

<%- if @use_filter -%>
echo "$1" | grep -q '\.rpm$' || exit

<%- end -%>
<%= %Q(#{@repomanage_cleanup}\n) if @cleanup -%>
<%= command %>
